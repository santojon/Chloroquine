{
  "manifest_version": 2,
  "name": "Chloroquine",
  "version": "0.1.2",
  "description": "Term replacer extension for Google Chrome",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "./lib/Chloroquine.js",
        "./src/main/options.js",
        "./src/main/main.js"
      ]
    }
  ],
  "options_ui": {
    "page": "./src/options/options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "activeTab",
    "background"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "name": "Chloroquine Options"
  },
  "background": {
    "scripts": [
      "./src/main/background.js"
    ]
  }
}